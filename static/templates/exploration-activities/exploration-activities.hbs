<form class="exploration-sheet" autocomplete="off">
  <header class="header">
    <div class="character-name">{{actor.name}}</div>
  </header>

  <div style="display: flex; overflow-y: auto; height: 100%">
    <aside class="side-bar">
      <figure class="image-container">
        <img
          class="actor-image"
          src="{{actor.img}}"
          data-edit="img"
          title="{{actor.name}}"
          height="auto"
          width="100%"
          style="margin: 0 auto"
        />
      </figure>

      <section>
        <!-- other -->
      </section>
    </aside>

    <section class="exploration-body crb-style">
      <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="ExplorationActivities">{{localize
            "ExplorationActivities"
          }}</a>
        <a class="item" data-tab="SkillExplorationActivities">{{localize
            "SkillExplorationActivities"
          }}</a>
      </nav>

      <main class="sheet-body">
        <div class="sheet-content">
          {{#each actions as |activities|}}
            <section
              class="tab {{@key}} actions"
              data-group="primary"
              data-tab="{{@key}}"
            >
              <div class="actions-container">
                <div class="actions-tabs-wrapper">
                  <div class="actions-panels">
                    <ol class="actions-list strikes-list">
                      {{#each activities.actions as |action|}}
                        <li class="item action" data-action="{{action.slug}}">
                          <div class="item-name">
                            <div
                              class="item-image variant-strike"
                              style="background-image: url({{action.img}})"
                            >
                              <i
                                class="fas fa-comment-alt"
                                style="display: none;"
                              ></i>
                            </div>
                            <div class="actions-title">
                              <div class="action-name">
                                <h4>{{action.name}}</h4>
                              </div>
                            </div>
                          </div>
                        </li>
                      {{/each}}
                    </ol>
                  </div>
                </div>
              </div>
            </section>
          {{/each}}

          <section class="item-summary">
            <header class="item-header flexrow">
              <img
                src="{{action.img}}"
                title="{{action.name}}"
                width="36"
                height="36"
                class="item-image"
              />
              <h3>{{action.name}}</h3>
            </header>

            {{#if action.system.traits}}
              <div class="tags item-properties">
                {{#if action.system.traits.rarity}}
                  <span class="tag {{action.system.traits.rarity}}">{{localize
                      action.system.traits.rarityLabel
                    }}</span>
                {{/if}}
                {{#each actionChatData.traits as |trait|}}
                  <span
                    class="tag"
                    data-tooltip="{{trait.description}}"
                  >{{localize trait.label}}
                  </span>
                {{/each}}
                {{#each chatData.properties as |property|}}
                  <span class="tag tag_secondary">{{localize property}}</span>
                {{/each}}
              </div>
            {{/if}}

            <div class="item-description">
              {{{action.description}}}
            </div>
          </section>
        </div>
      </main>

      <!--
      <button type="button" data-action="close">
        <span>{{localize "PF2E.UI.RuleElements.ChoiceSet.Decline"}}</span>
      </button>
      -->
    </section>
  </div>
</form>
